<?xml version="1.0" encoding="UTF-8" ?>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
    require-authentication="anonymous-all">
<!--    include-child-content="true">   -->



    <actions>
        <entity-find entity-name="party.Party" list="partyList"/>
        <entity-find entity-name="party.Person" list="personList"/>
        <entity-find entity-name="party.PartyGroup" list="personGroupList"/>
    </actions>


    <widgets>
        <container>
                
                <label text="Party Screen" type="h1"/>
                
<!--                <subscreens-active/>-->
                
                <label text="Party List" type="h3"/>
                <form-list name="PartyList" list="partyList">
                    <auto-fields-entity entity-name="party.Party" field-type="display"/>
                </form-list>


                <label text="Person List" type="h4"/>
                <form-list name="PersonList" list="personList">
                    <auto-fields-entity entity-name="party.Person" field-type="display"/>
                </form-list>


                <label text="Party Group List" type="h3"/>
                <form-list name="PersonGroupList" list="personGroupList">
                    <auto-fields-entity entity-name="party.PartyGroup" field-type="display"/>
                </form-list>

        </container>
    </widgets>
</screen>