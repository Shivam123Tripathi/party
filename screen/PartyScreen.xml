<?xml version="1.0" encoding="UTF-8" ?>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="anonymous-all">




    <transition name="createParty">
        <service-call name="create#party.Party"/>
        <default-response url="."/>
    </transition>





    <actions>
        <entity-find entity-name="party.Party" list="partyList"/>
        <entity-find entity-name="party.Person" list="partyPersonList"/>
        <entity-find entity-name="party.PartyGroup" list="partyGroupList"/>
    </actions>


    <widgets>
        <container>
                
            <container-dialog id="CreatePartyDialog" button-text="Create Party">
                <form-single name="CreatePartyForm"
                             transition="createParty">
                    <auto-fields-entity entity-name="party.Party"
                                        field-type="edit" include="all"/>

                    <field name="submitButton">
                        <default-field title="Create Party">
                            <submit/>
                        </default-field>
                    </field>

                </form-single>

            </container-dialog>


            <label text="Party Screen" type="h1"/>
                

                <label text="Party List" type="h3"/>
                <form-list name="PartyList" list="partyList">
                    <auto-fields-entity entity-name="party.Party" field-type="display"/>
                </form-list>


                <label text="Person List" type="h3"/>
                <form-list name="PersonList" list="partyPersonList">
                    <auto-fields-entity entity-name="party.Person" field-type="display"/>
                </form-list>


                <label text="Party Group List" type="h3"/>
                <form-list name="PersonGroupList" list="partyGroupList">
                    <auto-fields-entity entity-name="party.PartyGroup" field-type="display"/>
                </form-list>

        </container>
    </widgets>
</screen>