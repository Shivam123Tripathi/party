<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">


    <entity entity-name="Party" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="partyTypeEnumId" type="id"/>
        <field name="createdDate" type="date-time"/>

        <relationship type="one"
                      related="moqui.basic.Enumeration"
                      title="PartyType">
            <key-map field-name="partyTypeEnumId" related="enumId"/>
        </relationship>
    </entity>


    <entity entity-name="Person" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="firstName" type="text-short" not-null="true"/>
        <field name="lastName" type="text-short" not-null="true"/>
        <field name="dateOfBirth" type="date"/>

        <relationship type="one" related="party.Party">
            <key-map field-name="partyId"/>
        </relationship>
    </entity>



    <entity entity-name="PartyGroup" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="groupName" type="text-medium" not-null="true"/>
        <field name="description" type="text-medium"/>

        <relationship type="one" related="party.Party">
            <key-map field-name="partyId"/>
        </relationship>
    </entity>



    <entity entity-name="ContactMech" package="party" cache="true">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="contactMechTypeEnumId" type="id" not-null="true"/>
        <field name="infoString" type="text-medium"/>
        <field name="createdDate" type="date-time"/>

        <relationship type="one"
                      related="moqui.basic.Enumeration"
                      title="ContactMechType">
            <key-map field-name="contactMechTypeEnumId" related="enumId"/>
        </relationship>
    </entity>




    <entity entity-name="PartyContactMech" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="fromDate" type="date-time" is-pk="true"/>
        <field name="thruDate" type="date-time"/>

        <relationship type="one" related="party.Party">
            <key-map field-name="partyId"/>
        </relationship>

        <relationship type="one" related="party.ContactMech">
            <key-map field-name="contactMechId"/>
        </relationship>
    </entity>

</entities>


